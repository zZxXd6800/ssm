    <!--
    <mappers>：引入映射文件
    -->
    <mappers>
        <!--mapper接口和mapper配置文件必须在同一个包，且名称必须相同-->
<!--        <package name="com.atguigu.mybatis.mapper"/>-->
        <mapper resource="UserMapper.xml"/>
        <mapper resource="EmpMapper.xml"/>
        <mapper resource="DeptMapper.xml"/>
        <mapper resource="DynamicMapper.xml"/>
    </mappers>
</configuration>